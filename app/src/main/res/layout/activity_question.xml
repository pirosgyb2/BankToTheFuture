<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/map_background_gradient_dark">

    <View
        android:id="@+id/quiestionTopView"
        android:layout_width="0dp"
        android:layout_height="1dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/robotGuidelineRight"
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:layout_marginLeft="95dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/robotGuidelineBottom"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="70dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/question" />

    <ImageView
        android:id="@+id/quiestionRobot"
        android:layout_width="150dp"
        android:layout_height="180dp"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:rotation="20"
        android:scaleType="fitXY"
        android:src="@drawable/robot_without_hands_2"
        app:layout_constraintBottom_toTopOf="@id/robotGuidelineBottom"
        app:layout_constraintRight_toLeftOf="@id/robotGuidelineRight" />

    <ImageView
        android:id="@+id/backIcon"
        android:layout_width="60dp"
        android:layout_height="60dp"

        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:padding="15dp"
        android:src="@drawable/ic_chevron_left_black_24dp"
        android:tint="@color/colorWhite"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/question"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="20dp"
        android:gravity="center"
        android:paddingTop="20dp"
        android:text="sdkfsdfks sldkjs ldf lskfj dlsjf sdlf lskdfj sldfkj  sldfjsldfjsldkfjl kslfdkj sldf sldfkj lsdfj slk  ?"
        android:textColor="@color/colorWhite"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/quiestionRobot"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/backIcon" />

    <com.bme.aut.banktothefuture.AnswerButton
        android:id="@+id/answerA"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/answer_unselected"
        android:elevation="3dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/quiestionRobot" />

    <com.bme.aut.banktothefuture.AnswerButton
        android:id="@+id/answerB"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/answer_unselected"
        android:elevation="3dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/answerA" />

    <com.bme.aut.banktothefuture.AnswerButton
        android:id="@+id/answerC"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/answer_unselected"
        android:elevation="3dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/answerB" />

    <com.bme.aut.banktothefuture.AnswerButton
        android:id="@+id/answerD"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/answer_unselected"
        android:elevation="3dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/answerC" />

    <TextView
        android:id="@+id/sendButton"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/send_background"
        android:elevation="5dp"
        android:foreground="@drawable/ripple_dark"
        android:gravity="center"
        android:text="Beküldöm"
        android:textColor="@color/colorWhite"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>