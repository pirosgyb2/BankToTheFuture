<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/map_background_gradient"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/map"
        android:layout_width="wrap_content"
        android:layout_height="240dp"
        android:src="@drawable/floor_0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias=".55" />

    <ImageView
        android:id="@+id/moneyContainerImageView"
        android:layout_width="180dp"
        android:layout_height="70dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:scaleType="fitXY"
        android:src="@drawable/coin_container_background"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/coinsImageView"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:scaleType="fitStart"
        android:src="@drawable/coins_3"
        app:layout_constraintBottom_toBottomOf="@id/moneyContainerImageView"
        app:layout_constraintLeft_toLeftOf="@id/moneyContainerImageView"
        app:layout_constraintTop_toTopOf="@id/moneyContainerImageView" />

    <TextView
        android:id="@+id/moneyCountTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="10dp"
        android:shadowColor="@color/colorGreyDark"
        android:textColor="@color/colorWhite"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="@id/moneyContainerImageView"
        app:layout_constraintLeft_toLeftOf="@+id/moneyContainerImageView"
        app:layout_constraintRight_toRightOf="@id/moneyContainerImageView"
        app:layout_constraintTop_toTopOf="@id/moneyContainerImageView"
        tools:text="0 " />

</androidx.constraintlayout.widget.ConstraintLayout>